<BackupSetupScreenController>:
    id: backup_setup_screen

    canvas.before:
        Color:
            rgba: (230/255, 230/255, 230/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        BoxLayout:
            orientation: 'vertical'
            spacing: 25
            padding: 40
            size_hint: None, None
            size: 380, 480
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1 # Cor branca
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [15,]

            Label:
                color: "black"
                text: 'Usu√°rio autenticado com sucesso!'