#:kivy 2.3.0

# Define o estilo para a classe LoginScreen que criamos em Python.
<LoginScreenController>:
    # IDs s찾o usados para referenciar widgets no c처digo Python (self.ids.login_input)
    # ou dentro do pr처prio arquivo .kv.
    id: login_screen

    # Define um fundo cinza claro para a tela inteira, como no prot처tipo.
    canvas.before:
        Color:
            rgba: (230/255, 230/255, 230/255, 1) # Cor (R, G, B, A)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: [0, 0, 0, 0]
        spacing: 0
        size_hint: 1, 1

        Widget:
            size_hint_y: 0.13

        Image:
            source: 'assets/images/logo_macaw.png'
            size_hint: None, None
            size: 180, 120
            pos_hint: {'center_x': 0.5}
            allow_stretch: True

        Widget:
            size_hint_y: 0.04

        BoxLayout:
            orientation: 'vertical'
            spacing: 18
            size_hint: None, None
            size: 340, 180
            pos_hint: {'center_x': 0.5}

            TextInput:
                id: login_input
                hint_text: 'Login'
                multiline: False
                write_tab: False
                size_hint_y: None
                height: 44
                font_size: '16sp'
                padding: [10, 10]
                background_color: (1, 1, 1, 0)
                canvas.after:
                    Color:
                        rgba: (0.7, 0.7, 0.7, 1)
                    Line:
                        width: 1.2
                        rectangle: self.x, self.y, self.width, self.height
                on_text_validate: password_input.focus = True

            TextInput:
                id: password_input
                hint_text: 'Senha'
                multiline: False
                write_tab: False
                password: True
                size_hint_y: None
                height: 44
                font_size: '16sp'
                padding: [10, 10]
                background_color: (1, 1, 1, 0)
                canvas.after:
                    Color:
                        rgba: (0.7, 0.7, 0.7, 1)
                    Line:
                        width: 1.2
                        rectangle: self.x, self.y, self.width, self.height

            Button:
                text: 'Next'
                size_hint_y: None
                height: 48
                font_size: '18sp'
                background_color: (34/255, 102/255, 204/255, 1)
                background_normal: ''
                color: 1, 1, 1, 1
                pos_hint: {'center_x': 0.5}
                canvas.before:
                    Color:
                        rgba: (34/255, 102/255, 204/255, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [12,]
                on_press: root.do_login(login_input.text, password_input.text)

            Label:
                id: error_label
                text: ''
                font_size: '13sp'
                color: 1, 0.2, 0.2, 1
                size_hint_y: None
                height: 25
                halign: 'center'

        Widget:
            size_hint_y: 0.2
